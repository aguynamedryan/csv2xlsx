#!/usr/bin/env ruby
# vi: ft=ruby

require 'csv'
require 'axlsx'

dest = ARGV.shift
p = Axlsx::Package.new
wb = p.workbook
ARGV.each do |csv_file|
  sheet_name = File.basename(csv_file, File.extname(csv_file))
  wb.add_worksheet(name: sheet_name) do |sheet|
    CSV.foreach(csv_file) do |row|
      sheet.add_row row
    end
  end
end
p.serialize(dest)
